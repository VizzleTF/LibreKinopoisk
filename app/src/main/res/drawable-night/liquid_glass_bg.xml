<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Основной полупрозрачный фон для тёмной темы (alpha = 0.3f) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4D222222"/>
            <corners android:radius="28dp"/>
        </shape>
    </item>
    <!-- Inner refraction эффект для тёмной темы -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="#1AFFFFFF"
                android:centerColor="#0DFFFFFF"
                android:endColor="#00FFFFFF"/>
            <corners android:radius="28dp"/>
        </shape>
    </item>
    <!-- Дополнительный слой для эффекта стекла в тёмной теме -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="200dp"
                android:centerX="0.3"
                android:centerY="0.3"
                android:startColor="#0DFFFFFF"
                android:endColor="#00FFFFFF"/>
            <corners android:radius="28dp"/>
        </shape>
    </item>
</layer-list>