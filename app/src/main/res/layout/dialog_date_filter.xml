<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_date_dialog_title"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="16dp" />

    <RadioGroup
        android:id="@+id/radioGroupDateFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioDateOff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/filter_date_off"
            android:paddingVertical="8dp" />

        <RadioButton
            android:id="@+id/radioDateDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/filter_date_day"
            android:paddingVertical="8dp" />

        <RadioButton
            android:id="@+id/radioDateWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/filter_date_week"
            android:paddingVertical="8dp" />

        <RadioButton
            android:id="@+id/radioDateMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/filter_date_month"
            android:paddingVertical="8dp" />

        <RadioButton
            android:id="@+id/radioDateYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/filter_date_year"
            android:paddingVertical="8dp" />

    </RadioGroup>


</LinearLayout>