<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:blur="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/settingsBlurView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        blur:blurRadius="18" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="28dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#CCFFFFFF"
        app:cardMaxWidth="480dp"
        app:cardMaxHeight="600dp"
        android:foreground="@drawable/shine_glass">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80FFFFFF"
                android:alpha="0.5" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- 1. Добавленные сайты -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="?attr/colorSurfaceContainer">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Добавленные сайты"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:textColor="?attr/colorOnSurface"
                                android:layout_marginBottom="8dp" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycler_all_sites"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- 2. Поле добавления сайтов -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="?attr/colorSurfaceContainer">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Добавить новый сайт"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:textColor="?attr/colorOnSurface"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Добавьте новый сайт для просмотра в приложении"
                                android:textAppearance="?attr/textAppearanceBodyMedium"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginBottom="16dp" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                android:hint="Название сайта"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxStrokeColor="?attr/colorPrimary"
                                app:hintTextColor="?attr/colorPrimary"
                                app:boxBackgroundColor="?attr/colorSurfaceContainerHigh"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edit_site_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?attr/textAppearanceBodyLarge"
                                    android:textColor="?attr/colorOnSurface" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:hint="URL сайта"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxStrokeColor="?attr/colorPrimary"
                                app:hintTextColor="?attr/colorPrimary"
                                app:boxBackgroundColor="?attr/colorSurfaceContainerHigh"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edit_site_url"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textUri"
                                    android:textAppearance="?attr/textAppearanceBodyLarge"
                                    android:textColor="?attr/colorOnSurface" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_add_site"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:text="Добавить сайт"
                                android:textAppearance="?attr/textAppearanceLabelLarge"
                                app:cornerRadius="16dp"
                                app:backgroundTint="?attr/colorPrimary"
                                app:iconTint="?attr/colorOnPrimary"
                                style="@style/Widget.Material3.Button" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- 3. Внешний вид -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="?attr/colorSurfaceContainer">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Внешний вид"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:textColor="?attr/colorOnSurface"
                                android:layout_marginBottom="16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Тема"
                                android:textAppearance="?attr/textAppearanceBodyLarge"
                                android:textColor="?attr/colorOnSurface"
                                android:layout_marginBottom="8dp" />

                            <RadioGroup
                                android:id="@+id/themeRadioGroup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RadioButton
                                    android:id="@+id/themeAuto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Авто"
                                    android:textAppearance="?attr/textAppearanceBodyMedium"
                                    android:textColor="?attr/colorOnSurface"
                                    android:buttonTint="?attr/colorPrimary"
                                    android:padding="8dp" />

                                <RadioButton
                                    android:id="@+id/themeLight"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Светлая"
                                    android:textAppearance="?attr/textAppearanceBodyMedium"
                                    android:textColor="?attr/colorOnSurface"
                                    android:buttonTint="?attr/colorPrimary"
                                    android:padding="8dp" />

                                <RadioButton
                                    android:id="@+id/themeDark"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Темная"
                                    android:textAppearance="?attr/textAppearanceBodyMedium"
                                    android:textColor="?attr/colorOnSurface"
                                    android:buttonTint="?attr/colorPrimary"
                                    android:padding="8dp" />

                            </RadioGroup>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- 4. Правовая информация -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="?attr/colorSurfaceContainer">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Правовая информация"
                                android:textAppearance="?attr/textAppearanceTitleMedium"
                                android:textColor="?attr/colorOnSurface"
                                android:layout_marginBottom="12dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_legal_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Показать"
                                style="@style/Widget.Material3.Button.OutlinedButton" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </ScrollView>
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout> 