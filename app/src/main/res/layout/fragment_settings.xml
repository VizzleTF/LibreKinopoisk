<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="360dp"
    android:maxWidth="600dp"
    android:clipToOutline="true"
    app:cardCornerRadius="28dp"
    app:cardElevation="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:minHeight="500dp">

        <!-- Заголовок -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="24dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_settings"
                android:tint="?attr/colorPrimary"
                android:layout_marginEnd="16dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Настройки"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:textColor="?attr/colorOnSurface" />
        </LinearLayout>

        <!-- Разделитель -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorOutlineVariant"
            android:layout_marginHorizontal="24dp" />

        <!-- Основной контент -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 1. Добавленные сайты -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Добавленные сайты"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="8dp" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_all_sites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="200dp" />

            <!-- 2. Поле добавления сайтов -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Добавить новый сайт"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Добавьте новый сайт для просмотра в приложении"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginBottom="16dp" />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Название сайта"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_site_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textColor="?attr/colorOnSurface" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="URL сайта"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_site_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textUri"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textColor="?attr/colorOnSurface" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_site"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Добавить сайт"
                android:textAppearance="?attr/textAppearanceLabelLarge"
                app:cornerRadius="16dp"
                app:backgroundTint="?attr/colorPrimary"
                app:iconTint="?attr/colorOnPrimary"
                style="@style/Widget.Material3.Button" />

            <!-- 3. Внешний вид -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Внешний вид"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Тема"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="8dp" />
            <RadioGroup
                android:id="@+id/themeRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/themeAuto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Авто"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:buttonTint="?attr/colorPrimary"
                    android:padding="8dp" />
                <RadioButton
                    android:id="@+id/themeLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Светлая"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:buttonTint="?attr/colorPrimary"
                    android:padding="8dp" />
                <RadioButton
                    android:id="@+id/themeDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Темная"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:buttonTint="?attr/colorPrimary"
                    android:padding="8dp" />
            </RadioGroup>

            <!-- 4. Правовая информация -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Правовая информация"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_legal_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Показать"
                style="@style/Widget.Material3.Button.OutlinedButton" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView> 