<?xml version="1.0" encoding="utf-8"?>
<com.movietorr.android.LiquidGlassView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cornerRadius="28dp"
    app:glassAlpha="0.6"
    app:glassColor="?attr/colorSurface">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">
            <!-- Добавленные сайты -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainer">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Добавленные сайты"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="8dp" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/sitesRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Поле добавления сайтов -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainer">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Поле добавления сайтов"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="8dp" />
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/siteNameInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Название сайта"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/siteUrlInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="URL сайта"
                            android:inputType="textUri" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/addSiteButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Добавить сайт"
                        style="@style/Widget.Material3.Button" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Внешний вид -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainer">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Внешний вид"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="8dp" />
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RadioButton
                            android:id="@+id/themeAuto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Авто"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface" />
                        <RadioButton
                            android:id="@+id/themeLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Светлая"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface" />
                        <RadioButton
                            android:id="@+id/themeDark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Тёмная"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface" />
                    </RadioGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Правовая информация -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/legalInfoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Правовая информация"
                style="@style/Widget.Material3.Button.OutlinedButton" />
        </LinearLayout>
    </ScrollView>
</com.movietorr.android.LiquidGlassView> 