<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".MainActivity">

    <!-- Основной контент -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp">

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Контейнер для фрагментов -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:visibility="gone" />

    <!-- Нижняя панель с кнопками -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="8dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="?attr/colorSurfaceContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Кнопка поиска -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/searchButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="Поиск"
                android:textAppearance="?attr/textAppearanceLabelLarge"
                app:icon="@drawable/ic_search"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="?attr/colorOnSurfaceVariant"
                app:cornerRadius="24dp"
                app:backgroundTint="?attr/colorSurfaceContainerHigh"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <!-- Кнопка настроек -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/settingsButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="Настройки"
                android:textAppearance="?attr/textAppearanceLabelLarge"
                app:icon="@drawable/ic_settings"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="?attr/colorOnSurfaceVariant"
                app:cornerRadius="24dp"
                app:backgroundTint="?attr/colorSurfaceContainerHigh"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Плавающая кнопка поиска торрентов -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/torrentSearchFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="100dp"
        android:text="Поиск торрентов"
        android:textAppearance="?attr/textAppearanceLabelLarge"
        app:icon="@drawable/ic_utorrent"
        android:visibility="gone"
        app:backgroundTint="?attr/colorPrimaryContainer"
        app:iconTint="?attr/colorOnPrimaryContainer"
        app:textColor="?attr/colorOnPrimaryContainer"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout> 