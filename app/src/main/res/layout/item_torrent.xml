<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@color/card_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Метаданные в одной строке -->
        <LinearLayout
            android:id="@+id/metadataContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Источник -->
            <TextView
                android:id="@+id/sourceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RuTracker"
                android:textStyle="bold"
                android:textColor="@color/source_text"
                android:textSize="11sp"
                android:fontFamily="sans-serif-medium"
                android:background="@drawable/source_badge"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true" />

            <!-- Категория -->
            <TextView
                android:id="@+id/categoryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Фильмы"
                android:textSize="11sp"
                android:textColor="@color/category_text"
                android:fontFamily="sans-serif"
                android:background="@drawable/category_badge"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:layout_marginEnd="8dp" />

            <!-- Сиды -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_seed"
                    android:layout_marginEnd="2dp"
                    android:tint="@color/seed_color" />

                <TextView
                    android:id="@+id/seedsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25"
                    android:textSize="11sp"
                    android:textColor="@color/seed_color"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Пиры -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_peer"
                    android:layout_marginEnd="2dp"
                    android:tint="@color/peer_color" />

                <TextView
                    android:id="@+id/peersText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="11sp"
                    android:textColor="@color/peer_color"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Дата -->
            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01.01.2024"
                android:textSize="11sp"
                android:textColor="@color/date_text"
                android:fontFamily="sans-serif"
                android:layout_marginEnd="8dp" />

            <!-- Размер -->
            <TextView
                android:id="@+id/sizeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.5 GB"
                android:textSize="11sp"
                android:textColor="@color/size_text"
                android:fontFamily="sans-serif"
                android:background="@drawable/size_badge"
                android:paddingHorizontal="4dp"
                android:paddingVertical="1dp" />

        </LinearLayout>

        <!-- Название торрента -->
        <TextView
            android:id="@+id/nameText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Название торрента"
            android:textSize="14sp"
            android:textColor="@color/title_text"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="1dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/metadataContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView> 