<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/colorSurface">

    <!-- Заголовок -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_settings"
            android:tint="?attr/colorPrimary"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Настройки"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textColor="?attr/colorOnSurface" />

    </LinearLayout>

    <!-- Разделитель -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorOutlineVariant"
        android:layout_marginHorizontal="24dp" />

    <!-- Секция внешнего вида -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Внешний вид"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="16dp" />

        <!-- Тема -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?attr/colorSurfaceContainer"
            android:padding="16dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Тема"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/themeRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/themeAuto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Авто"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:buttonTint="?attr/colorPrimary"
                    android:padding="8dp" />

                <RadioButton
                    android:id="@+id/themeLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Светлая"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:buttonTint="?attr/colorPrimary"
                    android:padding="8dp" />

                <RadioButton
                    android:id="@+id/themeDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Темная"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:buttonTint="?attr/colorPrimary"
                    android:padding="8dp" />

            </RadioGroup>

        </LinearLayout>

    </LinearLayout>

    <!-- Разделитель -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorOutlineVariant"
        android:layout_marginHorizontal="24dp" />

    <!-- Секция сайтов -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Источники"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="16dp" />

        <!-- Настройки сайтов -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?attr/colorSurfaceContainer"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Настройки сайтов"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/manageSitesButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Управление сайтами"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                app:icon="@drawable/ic_info"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:cornerRadius="12dp"
                app:backgroundTint="?attr/colorSurfaceContainerHigh"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

    </LinearLayout>

    <!-- Разделитель -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorOutlineVariant"
        android:layout_marginHorizontal="24dp" />

    <!-- Кнопки действий -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отмена"
            android:textAppearance="?attr/textAppearanceLabelLarge"
            app:cornerRadius="20dp"
            app:backgroundTint="?attr/colorSurfaceContainerHigh"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/applyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Применить"
            android:textAppearance="?attr/textAppearanceLabelLarge"
            app:cornerRadius="20dp"
            app:backgroundTint="?attr/colorPrimary"
            app:iconTint="?attr/colorOnPrimary"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

</LinearLayout> 